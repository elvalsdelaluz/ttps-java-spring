<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Bean para el Autenticador -->
    <bean id="autenticador" class="ttps.spring.services.AutenticaUsuarioPorBD"/>

    <!-- Bean para el AutenticaUsuarioService -->
    <bean id="autUsuarioService" class="ttps.spring.services.AutenticaUsuarioService">
        <!-- Inyeccion por setter -->
        <property name="autenticador" ref="autenticador"/>
        <!-- Inyeccion por constructor -->
        <!-- <constructor-arg ref="autenticador"/> -->
    </bean>

</beans>
